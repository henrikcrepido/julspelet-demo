<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:Julspelet.Maui"
             x:Class="Julspelet.Maui.MainPage"
             BackgroundColor="{DynamicResource PageBackgroundColor}">

    <!-- BlazorWebView is the key component that hosts Blazor components in a native WebView -->
    <!-- This allows us to use the same Razor components from our Blazor Server app -->
    <BlazorWebView x:Name="blazorWebView" HostPage="wwwroot/index.html">
        <BlazorWebView.RootComponents>
            <!-- Mount the App component from the shared library -->
            <RootComponent Selector="#app" ComponentType="{x:Type local:Components.App}" />
        </BlazorWebView.RootComponents>
    </BlazorWebView>

</ContentPage>
