@inherits LayoutComponentBase

@* MudBlazor Layout with Christmas Theme *@
<MudThemeProvider Theme="@_theme" />
<MudPopoverProvider />
<MudDialogProvider />
<MudSnackbarProvider />

<MudLayout>
    <MudAppBar Elevation="1" Dense="true">
        <MudText Typo="Typo.h5" Class="ml-3">🎄 Julspelet - Yatzy Tournament 🎅</MudText>
        <MudSpacer />
        <MudText Typo="Typo.body2">Merry Christmas! ❄️</MudText>
    </MudAppBar>
    <MudMainContent Class="mt-16 pa-4">
        @Body
    </MudMainContent>
</MudLayout>

@code {
    // Christmas themed MudBlazor theme
    private readonly MudTheme _theme = new()
    {
        PaletteLight = new PaletteLight()
        {
            Primary = "#C41E3A",        // Christmas Red
            Secondary = "#165B33",       // Christmas Green
            Success = "#2E7D32",         // Green
            Info = "#1565C0",            // Blue
            Warning = "#F57C00",         // Orange
            Error = "#C62828",           // Red
            AppbarBackground = "#C41E3A", // Christmas Red
            Background = "#F5F5F5",      // Light Gray
            Surface = "#FFFFFF",         // White
            DrawerBackground = "#FAFAFA",
            DrawerText = "rgba(0,0,0, 0.87)",
            AppbarText = "#FFFFFF"
        }
    };
}
