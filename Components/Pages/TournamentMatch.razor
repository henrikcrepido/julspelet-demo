@page "/tournament-match/{tournamentId}/{matchId}"
@using Julspelet.Services
@using Julspelet.Models
@inject TournamentService TournamentService
@inject GameService GameService
@inject ScoringService ScoringService
@inject NavigationManager NavigationManager
@rendermode InteractiveServer
@implements IDisposable

<PageTitle>Tournament Match - Julspelet</PageTitle>

@if (_match == null || _gameState == null)
{
    <MudContainer MaxWidth="MaxWidth.Medium" Class="mt-8">
        <MudAlert Severity="Severity.Error">Match not found!</MudAlert>
    </MudContainer>
}
else if (_gameState.IsGameComplete)
{
    @* Match Complete Screen *@
    <MudContainer MaxWidth="MaxWidth.Large" Class="mt-4">
        <MudPaper Elevation="3" Class="pa-6" Style="background: linear-gradient(135deg, #ffd700 0%, #ffed4e 100%);">
            <MudText Typo="Typo.h3" Align="Align.Center" Color="Color.Error" Class="mb-2">
                üéÑ Match Complete! üéÑ
            </MudText>
            
            @if (_match.Winner != null)
            {
                <MudText Typo="Typo.h4" Align="Align.Center" Color="Color.Dark">
                    üèÜ Winner: @_match.Winner.Name üèÜ
                </MudText>
                <MudText Typo="Typo.h6" Align="Align.Center" Color="Color.Dark" Class="mt-2">
                    Final Score: @_match.Winner.ScoreCard.GetTotalScore()
                </MudText>
            }
        </MudPaper>

        @* Final Scoreboard *@
        <MudPaper Elevation="2" Class="pa-4 mt-4">
            <MudText Typo="Typo.h5" Color="Color.Primary" Class="mb-4">Final Scores</MudText>
            @foreach (var player in _gameState.Players.OrderByDescending(p => p.ScoreCard.GetTotalScore()))
            {
                <MudCard Outlined="true" Class="mb-2">
                    <MudCardContent>
                        <MudText Typo="Typo.h6">@player.Name</MudText>
                        <MudText Typo="Typo.h5" Color="Color.Primary">@player.ScoreCard.GetTotalScore() points</MudText>
                    </MudCardContent>
                </MudCard>
            }
        </MudPaper>

        @if (!_matchCompleted)
        {
            <MudButton Variant="Variant.Filled" 
                       Color="Color.Success"
                       Size="Size.Large"
                       Class="mt-4"
                       OnClick="CompleteMatch"
                       FullWidth="true">
                Continue Tournament
            </MudButton>
        }
        else
        {
            <MudButton Variant="Variant.Outlined" 
                       Color="Color.Default"
                       Class="mt-4"
                       StartIcon="@Icons.Material.Filled.ArrowBack"
                       OnClick="@(() => NavigationManager.NavigateTo($"/manage-tournament/{TournamentId}"))">
                Back to Tournament
            </MudButton>
        }
    </MudContainer>
}
else if (_gameState != null && _match != null)
{
    @* Active Game *@
    <MudContainer MaxWidth="MaxWidth.Large" Class="mt-4">
        @* Header *@
        <MudPaper Elevation="3" Class="pa-4 mb-4" Style="background: linear-gradient(135deg, #1e4620 0%, #2d5a2f 100%);">
            <MudText Typo="Typo.h4" Align="Align.Center" Color="Color.Warning" Style="font-family: 'Mountains of Christmas', cursive;">
                üéÑ Tournament Match @_match.MatchNumber üéÑ
            </MudText>
            <MudText Typo="Typo.h6" Align="Align.Center" Color="Color.Success">
                @_match.Round
            </MudText>
        </MudPaper>

        @* Current Player Turn *@
        <MudAlert Severity="Severity.Info" Class="mb-4">
            <MudText Typo="Typo.h6">
                üéÖ Current Turn: @_currentPlayer.Name
            </MudText>
            <MudText>
                Rolls remaining: @(3 - _gameState.RollsThisTurn) / 3
            </MudText>
        </MudAlert>

        @* Dice Area *@
        <MudPaper Elevation="2" Class="pa-6 mb-4">
            <MudText Typo="Typo.h5" Color="Color.Primary" Class="mb-4">üé≤ Dice</MudText>
            
            <div class="d-flex justify-center gap-4 flex-wrap mb-4">
                @for (int i = 0; i < _gameState.DiceSet.Dice.Count; i++)
                {
                    var die = _gameState.DiceSet.Dice[i];
                    var index = i;
                    
                    <MudPaper Elevation="3" 
                              Class="@($"pa-4 dice-container {(die.IsHeld ? "dice-held" : "dice-active")}")"
                              Style="cursor: pointer; min-width: 80px; text-align: center;"
                              @onclick="() => ToggleDieHold(index)">
                        <MudText Typo="Typo.h2" Class="dice-value">@die.Value</MudText>
                        @if (die.IsHeld)
                        {
                            <MudIcon Icon="@Icons.Material.Filled.Lock" Size="Size.Small" Color="Color.Warning" />
                        }
                    </MudPaper>
                }
            </div>

            <div class="d-flex justify-center gap-4">
                <MudButton Variant="Variant.Filled" 
                           Color="Color.Primary"
                           Size="Size.Large"
                           StartIcon="@Icons.Material.Filled.Casino"
                           OnClick="RollDice"
                           Disabled="@(_gameState.RollsThisTurn >= 3)">
                    Roll Dice (@(3 - _gameState.RollsThisTurn) left)
                </MudButton>
                
                <MudButton Variant="Variant.Outlined" 
                           Color="Color.Secondary"
                           Size="Size.Large"
                           OnClick="ReleaseAllDice"
                           Disabled="@(!_gameState.DiceSet.Dice.Any(d => d.IsHeld))">
                    Release All
                </MudButton>
            </div>
        </MudPaper>

        @* Scoring Options *@
        <MudPaper Elevation="2" Class="pa-6 mb-4">
            <MudText Typo="Typo.h5" Color="Color.Primary" Class="mb-4">üìä Score Options</MudText>
            
            <MudGrid>
                @foreach (ScoreCategory category in Enum.GetValues(typeof(ScoreCategory)))
                {
                    if (_currentPlayer.ScoreCard.IsCategoryScored(category))
                    {
                        continue; // Skip already scored categories
                    }

                    var diceValues = _gameState.DiceSet.GetValues();
                    var potentialScore = ScoringService.CalculateScore(category, diceValues);
                    
                    <MudItem xs="12" sm="6" md="4">
                        <MudCard Outlined="true" Class="score-card">
                            <MudCardContent>
                                <MudText Typo="Typo.h6">@GetCategoryDisplayName(category)</MudText>
                                <MudText Typo="Typo.h5" Color="Color.Success">@potentialScore points</MudText>
                            </MudCardContent>
                            <MudCardActions>
                                <MudButton Variant="Variant.Filled" 
                                           Color="Color.Success"
                                           FullWidth="true"
                                           OnClick="@(() => SelectScoreCategory(category))"
                                           Disabled="@(_gameState.RollsThisTurn == 0)">
                                    Score Here
                                </MudButton>
                            </MudCardActions>
                        </MudCard>
                    </MudItem>
                }
            </MudGrid>
        </MudPaper>

        @* Scoreboard *@
        <MudPaper Elevation="2" Class="pa-6">
            <MudText Typo="Typo.h5" Color="Color.Primary" Class="mb-4">üèÜ Scoreboard</MudText>
            
            <MudSimpleTable Striped="true" Hover="true">
                <thead>
                    <tr>
                        <th>Category</th>
                        @foreach (var player in _gameState.Players)
                        {
                            <th>@player.Name</th>
                        }
                    </tr>
                </thead>
                <tbody>
                    @foreach (ScoreCategory category in Enum.GetValues(typeof(ScoreCategory)))
                    {
                        <tr>
                            <td><strong>@GetCategoryDisplayName(category)</strong></td>
                            @foreach (var player in _gameState.Players)
                            {
                                <td>
                                    @if (player.ScoreCard.IsCategoryScored(category))
                                    {
                                        <MudChip T="string" Size="Size.Small" Color="Color.Success">
                                            @player.ScoreCard.Scores[category]
                                        </MudChip>
                                    }
                                    else
                                    {
                                        <MudChip T="string" Size="Size.Small" Color="Color.Default">-</MudChip>
                                    }
                                </td>
                            }
                        </tr>
                    }
                    <tr style="background-color: rgba(255, 215, 0, 0.2);">
                        <td><strong>TOTAL</strong></td>
                        @foreach (var player in _gameState.Players)
                        {
                            <td>
                                <MudChip T="string" Size="Size.Medium" Color="Color.Primary">
                                    <strong>@player.ScoreCard.GetTotalScore()</strong>
                                </MudChip>
                            </td>
                        }
                    </tr>
                </tbody>
            </MudSimpleTable>
        </MudPaper>
    </MudContainer>
}
else
{
    <MudContainer MaxWidth="MaxWidth.Medium" Class="mt-8">
        <MudAlert Severity="Severity.Warning">Loading match...</MudAlert>
    </MudContainer>
}

<style>
    .dice-container {
        transition: all 0.3s ease;
    }
    
    .dice-active {
        background-color: white;
        border: 2px solid #1976d2;
    }
    
    .dice-active:hover {
        transform: scale(1.05);
        box-shadow: 0 4px 20px rgba(0,0,0,0.2);
    }
    
    .dice-held {
        background-color: #fff3cd;
        border: 2px solid #ffc107;
    }
    
    .dice-value {
        font-weight: bold;
        user-select: none;
    }
    
    .score-card {
        height: 100%;
        transition: transform 0.2s;
    }
    
    .score-card:hover {
        transform: translateY(-4px);
    }
</style>

@code {
    [Parameter]
    public string TournamentId { get; set; } = "";
    
    [Parameter]
    public string MatchId { get; set; } = "";

    private Match? _match;
    private GameState? _gameState;
    private Player _currentPlayer => _gameState?.GetCurrentPlayer() ?? new Player();
    private bool _matchCompleted;

    protected override void OnInitialized()
    {
        LoadMatch();
    }

    private void LoadMatch()
    {
        _gameState = TournamentService.GetMatchGameState(TournamentId, MatchId);
        var tournament = TournamentService.GetTournament(TournamentId);
        _match = tournament?.Matches.FirstOrDefault(m => m.Id == MatchId);
    }

    private void RollDice()
    {
        if (_gameState != null && _gameState.RollsThisTurn < 3)
        {
            _gameState.Roll();
            StateHasChanged();
        }
    }

    private void ToggleDieHold(int index)
    {
        if (_gameState != null && _gameState.RollsThisTurn > 0)
        {
            _gameState.DiceSet.ToggleHold(index);
            StateHasChanged();
        }
    }

    private void ReleaseAllDice()
    {
        if (_gameState != null)
        {
            _gameState.DiceSet.ReleaseAllHolds();
            StateHasChanged();
        }
    }

    private void SelectScoreCategory(ScoreCategory category)
    {
        if (_gameState != null && _gameState.RollsThisTurn > 0)
        {
            var currentPlayer = _gameState.GetCurrentPlayer();
            if (currentPlayer != null && !currentPlayer.ScoreCard.IsCategoryScored(category))
            {
                var diceValues = _gameState.DiceSet.GetValues();
                var score = ScoringService.CalculateScore(category, diceValues);
                currentPlayer.ScoreCard.SetScore(category, score);
                
                // Move to next player
                _gameState.NextPlayer();
                
                StateHasChanged();
            }
        }
    }

    private void CompleteMatch()
    {
        if (TournamentService.CompleteMatch(TournamentId, MatchId))
        {
            _matchCompleted = true;
            StateHasChanged();
        }
    }

    private string GetCategoryDisplayName(ScoreCategory category)
    {
        return category switch
        {
            ScoreCategory.Ones => "Ones",
            ScoreCategory.Twos => "Twos",
            ScoreCategory.Threes => "Threes",
            ScoreCategory.Fours => "Fours",
            ScoreCategory.Fives => "Fives",
            ScoreCategory.Sixes => "Sixes",
            ScoreCategory.ThreeOfAKind => "Three of a Kind",
            ScoreCategory.FourOfAKind => "Four of a Kind",
            ScoreCategory.FullHouse => "Full House",
            ScoreCategory.SmallStraight => "Small Straight",
            ScoreCategory.LargeStraight => "Large Straight",
            ScoreCategory.Yatzy => "YATZY!",
            ScoreCategory.Chance => "Chance",
            _ => category.ToString()
        };
    }

    private void OnGameStateChanged()
    {
        InvokeAsync(() => StateHasChanged());
    }

    public void Dispose()
    {
        // Cleanup if needed
    }
}
